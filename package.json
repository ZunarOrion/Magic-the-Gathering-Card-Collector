{
  "name": "package.json",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx server.ts",
    "prod": "cross-env NODE_ENV=production node server.js",
    "buildwithtscheck": "tsc && vite build",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr server.ts --outDir dist/server",
    "preview": "vite preview",
    "start": "NODE_ENV=production node dist/server/server.js",
    "startlocal": "cross-env NODE_ENV=production node dist/server/server.js",
    "test": "vitest --watch=false&& npx playwright test",
    "playwrightServer": "cross-env NODE_ENV=test tsx server.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.7.0",
    "cross-env": "^10.1.0",
    "mongodb-memory-server": "^10.2.3",
    "typescript": "^6.0.0-dev.20250825",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "mongodb": "^6.19.0",
    "tsx": "^4.20.6"
  }
}
